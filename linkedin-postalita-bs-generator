    <script>
        function generateHumbleBrag() {
            const achievements = [
                "was promoted to Senior Assistant Regional Manager",
                "reached 10K LinkedIn followers",
                "finished a book",
                "gave a TEDx talk"
            ];
            const people = [
                "my barista",
                "my LinkedIn network",
                "my former boss who fired me",
                "the janitor"
            ];
            const advice = [
                "your network is your net worth",
                "failure is just success in progress",
                "done is better than perfect"
            ];
            
            const achievement = achievements[Math.floor(Math.random() * achievements.length)];
            const person = people[Math.floor(Math.random() * people.length)];
            const tip = advice[Math.floor(Math.random() * advice.length)];
            
            const post = `Thrilled to announce that I ${achievement}!\n\nThis would not have been possible without ${person}.\n\nTo anyone struggling, just remember: ${tip}.\n\n#Blessed #Grateful`;
            
            document.getElementById('output').textContent = post;
        }
        
        function generateCryingCEO() {
            const numbers = ["23", "17", "45", "8"];
            const reasons = [
                "success means nothing without people to share it with",
                "money cannot buy happiness",
                "we are all just humans trying our best"
            ];
            
            const num = numbers[Math.floor(Math.random() * numbers.length)];
            const reason = reasons[Math.floor(Math.random() * reasons.length)];
            
            const post = `I had to let go of ${num} incredible people today.\n\nThis is the hardest part of being a leader.\n\nBut it taught me that ${reason}.\n\n#Leadership #Vulnerability`;
            
            document.getElementById('output').textContent = post;
        }
        
        function generateAgree() {
            const statements = [
                "Good leaders listen more than they talk",
                "Culture is important",
                "Communication is key",
                "Hire good people"
            ];
            
            const statement = statements[Math.floor(Math.random() * statements.length)];
            
            const post = `${statement}.\n\nAgree?\n\n#Thoughts #Leadership`;
            
            document.getElementById('output').textContent = post;
        }
        
        function createLinketation() {
            const word1 = document.getElementById('word1').value || 'coffee';
            const word2 = document.getElementById('word2').value || 'spreadsheet';
            
            const templates = [
                `This morning, I was contemplating ${word1} when suddenly I noticed ${word2}.\n\nThen it hit me:\n\n${word1} is to personal growth what ${word2} is to business strategy.\n\nBoth require patience, vision, and courage.\n\nWhat seemingly unrelated things have taught you about leadership?`,
                `A ${word1} and ${word2} walk into a bar...\n\nNo, this is not a joke. It is a meditation on synergy.\n\n${word1} represents our comfort zone.\n${word2} represents our growth potential.\n\nThe distance between them? That is where transformation happens.`,
                `Unpopular opinion: ${word1} has more in common with ${word2} than you think.\n\nHear me out:\n\n1. Both exist in our world\n2. Both can be observed\n3. Both teach us something\n\nEverything is connected if you are willing to see it.`
            ];
            
            const template = templates[Math.floor(Math.random() * templates.length)];
            document.getElementById('output').textContent = template;
        }
    </script>
